<h2>Cadastre sua conta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "employees/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%= f.fields_for :company do |company_fields| %>
    <div>
        <%= company_fields.label :name %>
        <%= company_fields.text_field :name %>
    </div>
    <div>
        <%= company_fields.label :logo %>
        <%= fcompany_fields.text_field :logo %>
    </div>
    <div>
        <%= company_fields.label :address%>
        <%= company_fields.text_field :address %>
    </div>
    <div>
        <%= company_fields.label :cnpj %>
        <%= company_fields.number_field :cnpj %>
    </div>
    <div>
        <%= company_fields.label :site %>
        <%= company_fields.text_field :site %>
    </div>
    <div>
        <%= company_fields.label :social_media %>
        <%= company_fields.text_field :social_media %>
    </div>
    <div>
        <%= company_fields.label :domain %>
        <%= company_fields.text_field :domain %>
    </div>
  <% end %>  

  <div class="actions">
    <%= f.submit "Cadastrar" %>
  </div>
<% end %>

<%= render "employees/shared/links" %>
