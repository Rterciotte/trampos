
<h1>Cadastro de vaga de emprego</h1>

<%= form_with model: @job_ad, local: true do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>
    <div>
        <%= f.label :salary_range %>
        <%= f.text_field :salary_range %>
    </div>
    <div>
        <%= f.label :level %>
        <%= f.select :level, JobAd.levels.keys.map { |l| [l.humanize, l] } %>
    </div>
    <div>
        <%= f.label :mandatory_requirements %>
        <%= f.text_field :mandatory_requirements %>
    </div>
    <div>
        <%= f.label :total_vacancy %>
        <%= f.text_field :total_vacancy %>
    </div>

    <%= f.submit 'Cadastrar vaga' %>

<% end %>